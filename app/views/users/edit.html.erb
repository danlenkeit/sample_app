<% provide(:title, "EDIT USER") %>
<h1>EDIT</h1>
<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for(@user) do |f| %>
			<%= render 'fields', f: f %>
			<%= f.submit "SAVE", class: 'btn btn-primary' %>
		<% end %>

		<div class="gravatar_edit">
			<%= gravatar_for @user %>
			<a href="http://gravatar.com/emails", target=_blank>CHANGE</a>
		</div>
	</div>
</div>
